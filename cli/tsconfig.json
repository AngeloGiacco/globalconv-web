{
    "compilerOptions": {
      "module": "ES2022",
      "moduleResolution": "node",
      "outDir": "./dist",
      "esModuleInterop": true,
      "target": "ES2022",
      "allowJs": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }